def downsample(image, x, y):
	a = point_query_2d(image, 2*x, 2*y)
	b = point_query_2d(image, 2*x+1, 2*y)
	c = point_query_2d(image, 2*x, 2*y+1)
	d = point_query_2d(image, 2*x+1, 2*y+1)

	ret = (a+b+c+d)/4.0
	return ret

