import numpy

def border_replicate(image, x, y):
	return point_query_2d(image, x, y, BORDER_REPLICATE)

def main():
	# create 2D 
	# x+y, 5x5 matrix
	image = numpy.ones((5,5), dtype=numpy.float32)	
	for i in range(5):
		for j in range(5):
			image[i][j] = i+j

	# BORDER_REPLICATE
	result = border_replicate(image, x, y).range(x=-5:10,y=-5:10).dtype(image, float)

	# CPU REPLICATE implementation for only 15x15 matrix
	correct = numpy.zeros((15,15), dtype=numpy.float32)
	correct[5:10,5:10] = image

	for x in range(0,15):
		for y in range(0,15):
			# REPLICATE x
			xp = x
			if xp < 5: xp = 5
			if xp > 9: xp = 9
			
			# REPLICATE y
			yp = y
			if yp < 5: yp = 5
			if yp > 9: yp = 9

			correct[x][y] = correct[xp][yp]

	if (correct == result).all():
		print "Ok"
	else:
		print "Fail"
		print "Correct"
		print correct
		print "Result"
		print result
