
def func(a, x, y):
	v = point_query_2d(a, x, y)
	return v


def add(front, back, x, y):
	f = point_query_2d(front, x, y)
	b = point_query_2d(back, x, y)
	return f - b

def main():
	import numpy
	a = numpy.ones((5,5),dtype=numpy.float32)
	for i in range(5):
		for j in range(5):
			a[i][j] = i + j

	result = func(a, x, y).split(a, y=2)
					.range(x=0:5,y=0:5)
					.merge(add)

	correct = numpy.ones((5,5), dtype=numpy.float32)
	for i in range(5):
		for j in range(5):
			correct[i][j] = i + j
			if i > 1:
				correct[i][j] *= -1

	if (correct == result).all():
		print "Ok"
	else:
		print "Fail"
		print "Correct"
		print correct
		print "Result"
		print result
